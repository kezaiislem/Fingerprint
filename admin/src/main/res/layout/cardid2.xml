<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/oval">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#002453"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome"
            android:layout_marginTop="25dp"
            android:textColor="#ffffff"
            android:textSize="30dp"
            android:layout_gravity="center|top" />

    </LinearLayout>


    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/homme"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="108dp"/>

    <TextView
        android:id="@+id/fullname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome"
        android:textColor="#4a4a4a"
        android:layout_marginTop="-30dp"
        android:textSize="15dp"
        android:layout_gravity="center"
        android:textStyle="bold|italic"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:paddingLeft="10dp"
                android:text="Departement :"
                android:textColor="#4a4a4a"
                android:textSize="15dp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/departemnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="110dp"
                android:textColor="#9B9B9B"
                />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="90dp"
                    android:layout_marginLeft="10dp"
                    android:text="Email :"
                    android:textColor="#4a4a4a"
                    android:textSize="15dp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="90dp"
                    android:layout_marginLeft="60dp"
                    android:textColor="#9B9B9B"
                    />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="120dp"
                android:layout_marginLeft="10dp"
                android:text="Date Recrutment :"
                android:textColor="#4a4a4a"
                android:textSize="15dp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/recrutmentdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="120dp"
                android:text="12/12/2012"
                android:layout_marginLeft="135dp"
                android:textColor="#9B9B9B"
                />
        </RelativeLayout>

        <Button
            android:id="@+id/post"
            android:layout_width="154dp"
            android:layout_height="36dp"
            android:background="@drawable/g2"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            />
    </LinearLayout>
</FrameLayout>